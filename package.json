{
  "name": "shareledgerjs",
  "description": "Shareledger client JS library",
  "version": "0.29.5",
  "author": "Tan Do (Alex) <tan.do@sharering.network>",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev --parallel --verbose run build",
    "build:umd": "yarn workspaces foreach --topological-dev --parallel --verbose run build:umd",
    "clean": "yarn workspaces foreach --topological-dev --parallel --verbose run clean",
    "test": "yarn workspaces foreach --topological-dev --parallel --verbose run test",
    "test:unit": "yarn workspaces foreach --topological-dev --parallel --verbose run test:unit",
    "test:coverage": "yarn workspaces foreach --topological-dev --parallel --verbose run test:coverage",
    "lint": "yarn workspaces foreach --topological-dev --parallel --verbose run lint",
    "lint:fix": "yarn workspaces foreach --topological-dev --parallel --verbose run lint --fix",
    "prettier": "yarn workspaces foreach --topological-dev --parallel --verbose run prettier"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-bytes": "^0.1.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.1",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.9.1",
    "ts-proto": "^1.131.0",
    "tsconfig-paths": "^4.1.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "tslib": "^2.3.1",
    "typescript": "^4.9.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sharering/shareledgerjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
